<!-- the underscore '_' in the file name signal that this is a partial -->
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls/:id">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="login status">
      <% if(email !== null) { %>
        <form method="POST" action="/logout">
          <label>Logged in as: <%= email %></label>
          <label></label>
          <label></label>
          <button type="submit" class="btn btn-light">Logout</button>
        </form>
      <% } else { %>
        <form method="GET" action="/login">
          <label style="font-size: 1em;" for="username">Login Here: </label>
          <button type="submit" class="btn btn-light" style="font-size: x-small; line-height: 1em;">Login</button>
        </form>
        <form method="GET" action="/register">
          <label style="font-size: 0.8em;">New user?</label>
          <button type="submit" class="btn btn-light" style="font-size: xx-small; line-height: 0.8em;">Register HERE</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>